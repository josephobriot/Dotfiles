#!/bin/sh

search=$(cat /dev/null | dmenu_x -p "Browse the *private* web")

if [ -z "$search" ]; then exit; fi

xdotool getactivewindow getwindowname | grep "Mozilla Firefox (Navigation privÃ©e)" >/dev/null &&
	xdotool key ctrl+t &&
	xdotool key ctrl+l &&
	xdotool type "$search " &&
	xdotool key "BackSpace" &&
	xdotool key "Return" &&
	exit


firefox --private-window &&
	sleep 0.5 &&
	xdotool key ctrl+l &&
	xdotool type "$search " &&
	xdotool key "BackSpace" &&
	xdotool key "Return"
