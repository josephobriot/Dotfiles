#!/bin/sh

cat $HOME/.url_history | dmenu_x -p "Browse thw web" | sed -e s/\"/\\\\\"/ -e s/\'/\\\\\'/ | xargs -I {} sh -c '
echo "{}" >> $HOME/.url_history

xdotool getactivewindow getwindowname | grep "Mozilla Firefox" >/dev/null &&
	xdotool key ctrl+t &&
	xdotool key ctrl+l &&
	xdotool type "{} " &&
	xdotool key "BackSpace" &&
	xdotool key "Return" &&
	exit


xdotool search --name "Mozilla Firefox" windowactivate &&
	xdotool key ctrl+t &&
	xdotool key ctrl+l &&
	xdotool type "{} " &&
	xdotool key "BackSpace" &&
	xdotool key "Return"
'

